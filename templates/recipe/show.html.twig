{% extends 'base.html.twig' %}

{% block title %}
{{recipe.slug}}-{{recipe.id}}
{% endblock %}

{% block body %}
<div class="col-1"> <a href="{{ url('recipe.index')}}">Return</a></div>
<div class="container col-6">
	<h2>{{recipe.title}}</h2>
	<div class="rounded shadow my-2" style="max-height:300px;overflow: hidden;">
		<img src="{{ recipe.thumbnail?vich_uploader_asset(recipe, 'thumbnailFile'):'' }}" alt="{{ recipe.title }}"
			class="img-fluid {{ recipe.thumbnail?'':'d-none'}}">
	</div>
	<h4>La recette: </h4>
	<p>
		{{ recipe.getContent | nl2br }}
	</p>
</div>
{% endblock %}