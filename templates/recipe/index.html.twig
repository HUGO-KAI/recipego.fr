{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes
{% endblock %}
{% block body %}
<h2>
  Toutes les recettes
</h2>
<div class="row">
  <div class="col-8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>
            Titre
          </th>
          <th>
            Category
          </th>
        </tr>
      </thead>
      <tbody>
        {% for recipe in recipes %}
        <tr>
          <td>
            <a href="{{ url('recipe.show', {'id':recipe.id, 'slug': recipe.slug, 'recipe': recipe}) }}"
              class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover">{{recipe.title}}</a>
          </td>
          <td>
            {{ recipe.category.name | default('') }}
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    {% if previous >= 0 %}
    <a href="{{ path('recipe.index', { offset: previous }) }}">Previous</a>
    {% endif %}
    {% if next < recipes|length %} <a href="{{ path('recipe.index', { offset: next }) }}">Next</a>
      {% endif %}
  </div>
  <div class="col-4 text-center">
    <img src="/images/chef-cuisine.jpg" class="img-fluid rounded shadow" alt="hugo-recettes">
    <h4><a href="{{ url('admin_index' )}}">Cr√©er la votre !</a></h4>
  </div>
</div>

{% endblock %}