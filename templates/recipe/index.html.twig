{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes
{% endblock %}

{% block body %}
	<h2>
		Toutes les recettes
	</h2>
	<div>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>
						Titre
					</th>
					<th>
						Category
					</th>
				</tr>
			</thead>
			<tbody>
				{% for recipe in recipes %}
				<tr>
					<td>
						<a href="{{ url('recipe.show', {'id':recipe.id, 'slug': recipe.slug, 'recipe': recipe}) }}">{{recipe.title}}</a>
					</td>
					<td>
						{{ recipe.category.name | default('') }}
					</td>				
				</tr>
				{% endfor %}
			</tbody>			
		</table>
	</div>
{% endblock %}
