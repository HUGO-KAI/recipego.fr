{% extends 'base.html.twig' %}

{% block title %}Toutes les categories
{% endblock %}

{% block body %}
<h2>
  Toutes les categories
</h2>
<div class="row">
  <div class="col-8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>
            Nom
          </th>
          <th>
            Nombre de recettes
          </th>
          <th>
            Action
          </th>
        </tr>
      </thead>
      <tbody>
        {% for category in categories %}
        <tr>
          <td>{{category.name}}</td>
          <td>
            {{ category.count }}
          </td>
          <td>
            <a href="{{ path('category.show', {id:category.id, slug: category.slug})}}" class="btn btn-primary">Voir les
              recettes</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="col-4 text-center">
    <img src="/images/chef-cuisine.jpg" class="img-fluid rounded shadow" alt="hugo-recettes">
    <h4><a href="{{ url('admin_index' )}}">Cr√©er la votre !</a></h4>
  </div>
</div>

{% endblock %}